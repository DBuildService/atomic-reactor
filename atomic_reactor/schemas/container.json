{
  "$schema": "http://json-schema.org/draft-06/schema#",

  "title": "container image build configuration",

  "type": ["object", "null"],
  "properties": {
    "platforms": {
      "type": "object",
      "properties": {
        "only": {
          "$ref": "#/definitions/platforms"
        },
        "not": {
          "$ref": "#/definitions/platforms"
        }
      },
      "additionalProperties": false
    },
    "autorebuild": {
      "type": "object",
      "properties": {
        "from_latest": {
          "description": "Whether to rebuild from the latest commit",
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "compose": {
      "type": "object",
      "properties": {
        "packages": {
          "description": "names of RPMs to include",
          "type": ["array", "null"],
          "items": {
              "type": "string"
          }
        },
        "pulp_repos": {
          "description": "whether to build pulp composes",
          "type": "boolean"
        },
        "modules": {
          "description": "names of modules to include",
          "type": ["array", "null"],
          "items": {
              "type": "string"
          }
        },
        "signing_intent": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "flatpak": {
      "type": "object"
    },
    "image_build_method": {
      "enum": ["docker_api", "imagebuilder"]
    },
    "tags": {
      "type": "array"
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    }
  },
  "additionalProperties": false,

  "definitions": {
    "platform": {
      "type": "string"
    },
    "platforms": {
      "oneOf": [
        {
          "$ref": "#/definitions/platform"
        },
        { "type": "array",
          "items": {
            "$ref": "#/definitions/platform"
          }
        }
      ]
    }
  }
}
