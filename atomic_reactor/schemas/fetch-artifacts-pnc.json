{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Artifacts to be fetched from PNC builds",
  "type": [
    "object",
    "null"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "created_by": {
          "description": "Author of the file",
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "builds": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A specific PNC build and artifacts to be fetched",
        "properties": {
          "build_id": {
            "description": "The Build ID of a PNC build",
            "type": "integer"
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "object",
              "description": "Matcher for artifacts in PNC build",
              "properties": {
                "filename": {
                  "description": "Match by artifact filename",
                  "type": "string"
                },
                "md5": {
                  "description": "The md5 checksum of the artifact",
                  "type": "string",
                  "pattern": "^[a-f0-9]{32}$"
                },
                "sha1": {
                  "description": "The sha1 checksum of the artifact",
                  "type": "string",
                  "pattern": "^[a-f0-9]{40}$"
                },
                "sha256": {
                  "description": "The sha256 checksum of the artifact",
                  "type": "string",
                  "pattern": "^[a-f0-9]{64}$"
                },
                "target": {
                  "description": "Name and or destination path to be used when saving artifact to disk",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "filename"
              ],
              "anyOf": [
                {
                  "required": [
                    "md5"
                  ]
                },
                {
                  "required": [
                    "sha1"
                  ]
                },
                {
                  "required": [
                    "sha256"
                  ]
                }
              ]
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "build_id",
          "artifacts"
        ]
      }
    }
  }
}

